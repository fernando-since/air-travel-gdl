---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/navbar.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import AboutUs from '../components/AboutUs.astro';
import WhyUs from '../components/WhyUs.astro';
import Satisfaction from '../components/Satisfaction.astro';
import Footer from '../components/Footer.astro';
import FrecuentQuestions from '../components/FrecuentQuestions.astro';
import Testimonial from '../components/Testimonial.astro';
import VisitUs from '../components/VisitUs.astro';
import SimpleContact from '../components/SimpleContact.astro';

// Supports weights 100-900
import '@fontsource-variable/onest';
---

<Layout title="Bienvenido a Dental Integral">

	<main>
		<div class="flex justify-center flex-col">
			<div
				class="w-full h-screen bg-cover bg-local bg-no-repeat bg-custom-position"
				style="background-image: url('public/assets/worker-spraying.png');"
			>
				<NavBar/>
				<Hero/>
			</div>
			<Services/>
			<AboutUs/>
			<WhyUs/>
			<Satisfaction/>
			<Testimonial/>
			<FrecuentQuestions/>
			<VisitUs/>
			<SimpleContact/>
			<Footer/>
			
		</div>
	</main>
	
</Layout>



<style is:global>
	* {
		font-family: 'Onest Variable', sans-serif;
	}

	main {
		display: flex;
		justify-content: center;
	}

	.principal-container {
		padding: 1rem 10rem;
	}

	.bg-custom-position {
		background-size: 115%;
		background-position: center calc(100% + 130px);
	}
	
	@media only screen and (min-width: 1920px) {
		.principal-container {
			padding: 0 2vw;
		}
	}

	@media only screen and (max-width: 720px) {
		.principal-container {
			width: 100%;
			padding: 50px;
		}
	}

	@media only screen and (max-width: 480px) {
		.principal-container {
			width: 100%;
			padding: 20px;
		}
	}


</style>