    }


    #navBar {
        position: relative;
        animation-name: showSlowly;
        animation-duration: 1s;
        animation-delay: 0s;
    }

        @keyframes showSlowly {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
        }
    
</style>