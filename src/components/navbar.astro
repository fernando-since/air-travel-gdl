<!-- CHANGE MODE THEME -->
<script>
    const switchTheme = document.querySelector(
      "[data-switch-theme]"
    ) as HTMLButtonElement;

    if (
      localStorage.getItem("appTheme") === "dark" ||
      (!("appTheme" in localStorage) &&
        window.matchMedia("(prefers-color-scheme: dark)").matches)
    ) {
      document.documentElement.classList.add("dark");
    } else {
      document.documentElement.classList.remove("dark");
    }

    if (switchTheme) {
      switchTheme.addEventListener("click", (e) => {
        e.preventDefault();
        const doc = document.documentElement;
        if (doc) {
          if (localStorage.getItem("appTheme")) {
            if (localStorage.getItem("appTheme") === "light") {
              doc.classList.add("dark");
              localStorage.setItem("appTheme", "dark");
            } else {
              document.documentElement.classList.remove("dark");
              localStorage.setItem("appTheme", "light");
            }
          } else {
            if (doc.classList.contains("dark")) {
              doc.classList.remove("dark");
              localStorage.setItem("appTheme", "light");
            } else {
              doc.classList.add("dark");
              localStorage.setItem("appTheme", "dark");
            }
          }
        }
      });
    }


    // Navbar
    const closeNavBar = document.getElementsByClassName('close-nav-bar')!;
    const openNavBar = document.getElementById('openNavBar')!;
    const navBar = document.getElementById('navBar')!;

    for(var i = 0; i < closeNavBar.length; i++) {
        closeNavBar[i].addEventListener('click', toggleMenu);
    }
    openNavBar.addEventListener('click', toggleMenu);

    function toggleMenu() {
        navBar.style.animationPlayState = 'running';
        navBar.classList.toggle("hidden");
    }

</script>


<style>
    .shadow-container { 
        box-shadow: -22px 0px 22px -30px rgb(255 255 255 / 75%);
